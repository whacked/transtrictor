{
   "description": ".env config for transtrictor local utils (webserver, pouchdb)",
   "properties": {
      "API_SERVER_PORT": {
         "default": 1235,
         "description": "where the api server listens for requests",
         "type": "number"
      },
      "ARANGODB_AUTH_PASSWORD": {
         "type": "string"
      },
      "ARANGODB_AUTH_USERNAME": {
         "type": "string"
      },
      "ARANGODB_SERVER_URL": {
         "examples": [
            "http://localhost:8529"
         ],
         "pattern": "https?://.+?:\\d+",
         "type": "string"
      },
      "COUCHDB_AUTH_PASSWORD": {
         "type": "string"
      },
      "COUCHDB_AUTH_USERNAME": {
         "type": "string"
      },
      "COUCHDB_SERVER_URL": {
         "examples": [
            "http://localhost:5984"
         ],
         "pattern": "https?://.+?:\\d+",
         "type": "string"
      },
      "EXPRESS_POUCHDB_LOG_PATH": {
         "default": "express-pouchdb.log",
         "description": "where the access logs for express-pouchdb should be saved",
         "examples": [
            "/tmp/express-pouchdb.log"
         ],
         "type": "string"
      },
      "PGDATABASE": {
         "examples": [
            "mydb"
         ],
         "type": "string"
      },
      "PGHOST": {
         "default": "localhost",
         "examples": [
            "database.server.com",
            "127.0.0.1"
         ],
         "type": "string"
      },
      "PGPASSWORD": {
         "examples": [
            "secretpassword"
         ],
         "type": "string"
      },
      "PGPORT": {
         "default": 5432,
         "examples": [
            5432
         ],
         "type": "number"
      },
      "PGUSER": {
         "default": "$USER",
         "examples": [
            "dbuser"
         ],
         "type": "string"
      },
      "POUCHDB_DATABASE_PREFIX": {
         "description": "use :memory: or remove this item to use in-memory database",
         "examples": [
            ":memory:",
            "/tmp/cache/test-pdb"
         ],
         "type": "string"
      },
      "SQLITE_DATABASE_PATH": {
         "examples": [
            ":memory:",
            "/tmp/transtrictor-data.sqlite"
         ],
         "type": "string"
      }
   },
   "type": "object"
}
